{
  "name": "filesize-monitor",
  "displayName": "FileSize-Monitor",
  "description": "Displays the size of files in the project directory.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fileSizeMonitorView"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "fileSizeMonitorView",
          "name": "File Sizes",
          "contextualTitle": "File Sizes"
        }
      ]
    },
    "commands": [
      {
        "command": "fileSizeMonitor.showSizes",
        "title": "Show File Sizes"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "lint": "eslint src --ext ts,js"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^9.9.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
